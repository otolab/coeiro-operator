  "devDependencies": {
    "@types/node": "^22.18.3",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "debug",
    "tools"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/coeiro-operator.git",
    "directory": "packages/mcp-debug"
  },
  "homepage": "https://github.com/otolab/coeiro-operator#readme",
  "bugs": {
    "url": "https://github.com/otolab/coeiro-operator/issues"
