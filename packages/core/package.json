{
  "name": "@coeiro-operator/core",
  "version": "1.2.1",
  "description": "Core utilities and shared functionality for COEIRO Operator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64",
    "ia32"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "vitest --silent",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@coeiro-operator/common": "workspace:*",
    "@coeiro-operator/term-bg": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "core",
    "utilities",
    "config",
    "logger"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/coeiro-operator.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/otolab/coeiro-operator#readme",
  "bugs": {
    "url": "https://github.com/otolab/coeiro-operator/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
