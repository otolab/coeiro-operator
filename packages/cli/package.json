{
  "name": "@coeiro-operator/cli",
  "version": "1.3.4",
  "description": "CLI tools for COEIRO Operator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64",
    "ia32"
  ],
  "bin": {
    "operator-manager": "./dist/operator-manager.js",
    "say-coeiroink": "./dist/say-coeiroink.js",
    "dictionary-register": "./dist/dictionary-register.js",
    "add-character": "./dist/add-character.js"
  },
  "scripts": {
    "build": "tsc --build",
    "test": "vitest --silent",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@coeiro-operator/audio": "workspace:*",
    "@coeiro-operator/common": "workspace:*",
    "@coeiro-operator/core": "workspace:*",
    "commander": "^14.0.1"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/node": "^22.18.3",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cli",
    "tools",
    "coeiroink"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/coeiro-operator.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/otolab/coeiro-operator#readme",
  "bugs": {
    "url": "https://github.com/otolab/coeiro-operator/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
