{
  "name": "@coeiro-operator/mcp",
  "version": "1.0.1",
  "description": "MCP server for COEIRO Operator",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64",
    "ia32"
  ],
  "bin": {
    "coeiro-operator": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "@coeiro-operator/common": "^1.0.1",
    "@coeiro-operator/core": "^1.0.1",
    "@coeiro-operator/audio": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.19.1"
  },
  "devDependencies": {
    "@types/node": "^22.18.3",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "server",
    "coeiroink"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/coeiro-operator.git",
    "directory": "packages/mcp"
  },
  "homepage": "https://github.com/otolab/coeiro-operator#readme",
  "bugs": {
    "url": "https://github.com/otolab/coeiro-operator/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
