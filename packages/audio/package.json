{
  "name": "@coeiro-operator/audio",
  "version": "1.2.8",
  "description": "Audio synthesis and playback module for COEIRO Operator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64",
    "ia32"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "vitest --silent",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@coeiro-operator/common": "workspace:*",
    "@coeiro-operator/core": "workspace:*",
    "@echogarden/audio-io": "^0.4.2",
    "dsp.js": "^1.0.1",
    "echogarden": "^2.10.1",
    "node-fetch": "^3.3.2",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "@types/wav": "^1.0.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "audio",
    "synthesis",
    "coeiroink",
    "tts"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/coeiro-operator.git",
    "directory": "packages/audio"
  },
  "homepage": "https://github.com/otolab/coeiro-operator#readme",
  "bugs": {
    "url": "https://github.com/otolab/coeiro-operator/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
