{
  "name": "coeiro-operator",
  "version": "1.0.0",
  "description": "MCP server for COEIROINK voice synthesis and operator management",
  "main": "dist/mcp/server.js",
  "bin": {
    "coeiro-operator": "./dist/mcp/server.js",
    "operator-manager": "./scripts/operator-manager",
    "say-coeiroink": "./scripts/say-coeiroink"
  },
  "scripts": {
    "start": "node dist/mcp/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e.test.ts",
    "test:e2e:watch": "jest --testPathPattern=e2e.test.ts --watch",
    "test:mcp-debug": "jest src/mcp-debug/test/jest-e2e.test.ts",
    "test:coeiro-e2e": "jest src/mcp-debug/test/coeiro-operator-e2e.test.ts",
    "test:all": "npm run test && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "coeiroink",
    "voice",
    "synthesis",
    "operator"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "audify": "^1.9.0",
    "dsp.js": "^1.0.1",
    "echogarden": "^2.9.0",
    "node-libsamplerate": "^1.0.0",
    "node-wav": "^0.0.2",
    "speaker": "^0.5.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
