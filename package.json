{
  "name": "coeiro-operator",
  "version": "1.0.0",
  "description": "MCP server for COEIROINK voice synthesis and operator management",
  "main": "dist/mcp/server.js",
  "bin": {
    "coeiro-operator": "./dist/mcp/server.js",
    "operator-manager": "./scripts/operator-manager",
    "say-coeiroink": "./scripts/say-coeiroink"
  },
  "scripts": {
    "start": "node dist/mcp/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:coeiro": "vitest --config vitest.config.ts",
    "test:mcp-debug": "vitest --config vitest.mcp-debug.config.ts",
    "test:e2e": "vitest --run e2e.test.ts",
    "test:e2e:watch": "vitest --watch e2e.test.ts",
    "test:all": "npm run test:coeiro && npm run test:mcp-debug",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "coeiroink",
    "voice",
    "synthesis",
    "operator"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "dsp.js": "^1.0.1",
    "echogarden": "^2.9.0",
    "node-libsamplerate": "^1.0.0",
    "speaker": "^0.5.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
