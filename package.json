{
  "name": "coeiro-operator",
  "version": "2.0.0",
  "description": "MCP server for COEIROINK voice synthesis and operator management",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/mcp/server.js",
  "bin": {
    "coeiro-operator": "./scripts/coeiro-operator",
    "operator-manager": "./scripts/operator-manager",
    "say-coeiroink": "./scripts/say-coeiroink",
    "dictionary-register": "./scripts/dictionary-register"
  },
  "scripts": {
    "start": "node dist/mcp/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:all": "npm run build:packages",
    "build:packages": "npm run build:common && npm run build:core && npm run build:audio && npm run build:term-bg && npm run build:cli && npm run build:mcp && npm run build:mcp-debug",
    "build:common": "npm run build -w @coeiro-operator/common",
    "build:core": "npm run build -w @coeiro-operator/core",
    "build:audio": "npm run build -w @coeiro-operator/audio",
    "build:term-bg": "npm run build -w @coeiro-operator/term-bg",
    "build:cli": "npm run build -w @coeiro-operator/cli",
    "build:mcp": "npm run build -w @coeiro-operator/mcp",
    "build:mcp-debug": "npm run build -w @coeiro-operator/mcp-debug",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --config vitest.coverage.config.ts --run",
    "test:ui": "vitest --ui",
    "test:memory": "NODE_OPTIONS=\"--expose-gc\" vitest memory-leak-detection.test.ts",
    "test:coeiro": "vitest --config vitest.config.ts",
    "test:mcp-debug": "vitest --config vitest.mcp-debug.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts --run",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts --watch",
    "test:all": "npm run test:common && npm run test:core && npm run test:audio && npm run test:cli && npm run test:mcp && npm run test:mcp-debug",
    "test:common": "npm run test -w @coeiro-operator/common",
    "test:core": "npm run test -w @coeiro-operator/core",
    "test:audio": "npm run test -w @coeiro-operator/audio",
    "test:cli": "npm run test -w @coeiro-operator/cli",
    "test:mcp": "npm run test -w @coeiro-operator/mcp",
    "type-check": "tsc --noEmit",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "coeiroink",
    "voice",
    "synthesis",
    "operator"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@types/commander": "^2.12.5",
    "commander": "^14.0.1",
    "dsp.js": "^1.0.1",
    "echogarden": "^2.9.0",
    "speaker": "^0.5.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  }
}
