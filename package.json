{
  "name": "coeiro-operator",
  "version": "1.1.0",
  "description": "MCP server for COEIROINK voice synthesis and operator management",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/mcp/dist/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otolab/coeiro-operator.git"
  },
  "homepage": "https://github.com/otolab/coeiro-operator#readme",
  "bugs": {
    "url": "https://github.com/otolab/coeiro-operator/issues"
  },
  "bin": {
    "coeiro-operator": "./scripts/coeiro-operator",
    "operator-manager": "./scripts/operator-manager",
    "say-coeiroink": "./scripts/say-coeiroink",
    "dictionary-register": "./scripts/dictionary-register"
  },
  "scripts": {
    "start": "node dist/mcp/server.js",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "build:all": "tsc --build --force",
    "build:packages": "pnpm --filter @coeiro-operator/common build && pnpm --filter @coeiro-operator/core build && pnpm --filter @coeiro-operator/audio build && pnpm --filter @coeiro-operator/term-bg build && pnpm --filter @coeiro-operator/cli build && pnpm --filter @coeiro-operator/mcp build && pnpm --filter @coeiro-operator/mcp-debug build",
    "build:common": "pnpm --filter @coeiro-operator/common build",
    "build:core": "pnpm --filter @coeiro-operator/core build",
    "build:audio": "pnpm --filter @coeiro-operator/audio build",
    "build:term-bg": "pnpm --filter @coeiro-operator/term-bg build",
    "build:cli": "pnpm --filter @coeiro-operator/cli build",
    "build:mcp": "pnpm --filter @coeiro-operator/mcp build",
    "build:mcp-debug": "pnpm --filter @coeiro-operator/mcp-debug build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --config vitest.coverage.config.ts --run",
    "test:ui": "vitest --ui",
    "test:memory": "NODE_OPTIONS=\"--expose-gc\" vitest memory-leak-detection.test.ts",
    "test:coeiro": "vitest --config vitest.config.ts",
    "test:mcp-debug": "vitest --config vitest.mcp-debug.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts --run",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts --watch",
    "test:all": "pnpm --filter @coeiro-operator/common test && pnpm --filter @coeiro-operator/core test && pnpm --filter @coeiro-operator/audio test && pnpm --filter @coeiro-operator/cli test && pnpm --filter @coeiro-operator/mcp test && pnpm --filter @coeiro-operator/mcp-debug test",
    "test:common": "pnpm --filter @coeiro-operator/common test",
    "test:core": "pnpm --filter @coeiro-operator/core test",
    "test:audio": "pnpm --filter @coeiro-operator/audio test",
    "test:cli": "pnpm --filter @coeiro-operator/cli test",
    "test:mcp": "pnpm --filter @coeiro-operator/mcp test",
    "type-check": "tsc --noEmit",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "prepublishOnly": "pnpm build",
    "version:check": "pnpm ls -r --depth 0",
    "publish:dry": "pnpm publish -r --dry-run --no-git-checks",
    "publish:all": "pnpm publish -r --access public --no-git-checks",
    "changeset": "changeset",
    "changeset:add": "node scripts/create-changeset.js",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm publish -r --no-git-checks",
    "release": "pnpm build:all && pnpm publish -r --no-git-checks"
  },
  "keywords": [
    "mcp",
    "coeiroink",
    "voice",
    "synthesis",
    "operator"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@coeiro-operator/common": "workspace:*",
    "@coeiro-operator/core": "workspace:*",
    "@coeiro-operator/mcp-debug": "workspace:*",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "express": "^4.21.2",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  }
}
