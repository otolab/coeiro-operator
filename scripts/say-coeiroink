#!/bin/bash

# say-coeiroink: COEIROINK音声合成システムコマンドラインツール
# packages/cli/dist/say-coeiroink.jsを実行するシェルスクリプト

# スクリプトの場所を取得（シンボリックリンク対応）
SCRIPT_PATH="$(readlink -f "$0")"
SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Node.jsでCLIを実行（コンパイル済みファイル使用）
# punycode非推奨警告を抑制
exec node --no-deprecation "$PROJECT_ROOT/packages/cli/dist/say-coeiroink.js" "$@"